{
    "name": "@gbt/sat-scripts",
    "description": "Substance Automation Toolkit Scripts",
    "private": true,
    "type": "module",
    "files": [
        "docs",
        "types",
        "dist",
        "CHANGELOG.md",
        "exampleNodeScript.ts"
    ],
    "exports": {
        ".": [
            {
                "import": "./dist/index.mjs",
                "types": "./types/index.d.ts",
                "require": "./dist/index.cjs",
                "default": "./dist/index.js"
            },
            "./dist/index.js"
        ]
    },
    "main": "dist/index.js",
    "types": "types/index.d.ts",
    "umd:main": "dist/index.umd.js",
    "jsdelivr": "dist/index.umd.js",
    "unpkg": "dist/index.umd.js",
    "module": "dist/index.esm.js",
    "cdn": "dist/index.umd.js",
    "keywords": [
        "typescript",
        "python",
        "sat",
        "psybs",
        "utilities"
    ],
    "scripts": {
        "\n========== BUILD >> ==========": "",
        "build": "pnpm build:ts && pnpm build:rollup",
        "build:rollup": "rollup --config ./rollup.config.js",
        "build:ts": "tsc --build",
        "\n========== DEV >> ==========": "",
        "dev": "tsc --build --watch",
        "\n========== TEST >> ==========": "",
        "test": "pnpm exec python3 src/build.py",
        "test:example": "ts-node --esm ./exampleNodeScript.ts --path ./../../themes --name shopify-dawn",
        "\n========== PUBLISH >> ==========": "",
        "release": "pnpm prerelease && pnpm publish --access public --report-summary --no-git-checks",
        "prerelease": "pnpm clean && pnpm build && pnpm run docs && pnpm fix && pnpm check && pnpm test",
        "\n========== CLEAN >> ==========": "",
        "clean": "pnpm clean:ts && pnpm clean:sat",
        "clean:ts": "tsc --build --clean",
        "clean:sat": " rm -f sat",
        "clean:build": "rm -R -f dist && rm -R -f types && rm -R -f docs",
        "\n========== CODE STYLE >> ==========": "",
        "lint": "cross-var eslint \"{$npm_package_config_eslint_path}.{$npm_package_config_eslint_extensions}\" --ignore-path .gitignore -c $npm_package_config_eslint_config",
        "prettier": "cross-var prettier {$npm_package_config_prettier_path}.{$npm_package_config_prettier_extensions}",
        "\n========== CHECK >> ==========": "",
        "check": "pnpm lint",
        "\n========== FIX >> ==========": "",
        "fix": "pnpm prettier --write",
        "install:black": "pip install black",
        "install:sat": "pnpm clean:sat && ln -s '/Applications/Substance\\ Automation\\ Toolkit' 'sat'",
        "postinstall": "pnpm install:black"
    },
    "license": "MIT",
    "author": {
        "name": "Gillian Tunney",
        "email": "gbtunney@mac.com"
    },
    "devDependencies": {
        "@snailicide/build-config": "^0.2.5",
        "@types/glob": "^8.0.0",
        "@types/node": "^18.7.18",
        "@types/yargs": "^17.0.13",
        "eslint": "^8.27.0",
        "glob": "^8.0.3",
        "jest": "^29.3.1",
        "jsdoc": "^4.0.0",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "python-shell": "^5.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3",
        "vite": "^3.2.4",
        "xml-js": "^1.6.11",
        "yargs": "^17.6.0",
        "zod": "^3.19.1"
    },
    "directories": {
        "doc": "docs"
    },
    "prettier": "@snailicide/build-config/prettier",
    "config": {
        "eslint": {
            "extensions": "ts,js,cjs,mjs",
            "path": ".es*,*,**/*",
            "config": ".eslintrc.cjs"
        },
        "prettier": {
            "extensions": "ts,js,cjs,mjs,cts,json,yaml,yml,graphql,md",
            "path": "*,**/*"
        }
    }
}
